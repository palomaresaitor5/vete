---
import "../index.css";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "PetFood Expert | Opiniones de Comida para Perros y Gatos",
  description = "Reviews y an√°lisis expertos de piensos y comidas para perros y gatos. Opiniones honestas de un veterinario jubilado.",
} = Astro.props;
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=Nunito:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <meta name="author" content="PetFood Expert" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
  </head>
  <body class="bg-background text-foreground font-body">
    <slot />
  </body>
</html>
